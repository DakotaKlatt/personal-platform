---
interface Props {
  entries: Array<{
    company: string;
    role: string;
    period: string;
    location?: string;
    summary: string | string[];
    link?: string;
    link2Label?: string;
    link2Url?: string;
  }>;
  class?: string;
}
const { entries, class: className = '' } = Astro.props;
---

<div class={`space-y-0 ${className}`}>
  {entries.map((entry, i) => (
    <div class="relative flex gap-6 pb-10 last:pb-0">
      {/* vertical line */}
      {i < entries.length - 1 && (
        <span
          class="absolute left-[11px] top-6 bottom-0 w-px bg-[var(--color-border)]"
          aria-hidden="true"
        />
      )}
      {/* dot */}
      <span
        class="relative z-10 flex h-6 w-6 shrink-0 items-center justify-center rounded-full border-2 border-accent bg-[var(--color-bg)]"
        aria-hidden="true"
      />
      <div class="flex-1 min-w-0 pt-0.5">
        <div class="flex flex-wrap items-baseline justify-between gap-2">
          <div>
            {entry.link ? (
              <a
                href={entry.link}
                target="_blank"
                rel="noopener noreferrer"
                class="font-display font-semibold text-[var(--color-text)] hover:text-accent transition-colors"
              >
                {entry.company}
              </a>
            ) : (
              <span class="font-display font-semibold text-[var(--color-text)]">{entry.company}</span>
            )}
            <span class="text-[var(--color-text-muted)]"> · {entry.role}</span>
          </div>
          <span class="text-sm text-[var(--color-text-muted)]">
            {entry.period}
            {entry.location && <span> · {entry.location}</span>}
          </span>
        </div>
        {Array.isArray(entry.summary) ? (
          <ul class="mt-2 space-y-1 text-[var(--color-text-muted)] text-sm leading-relaxed list-disc list-outside pl-5">
            {entry.summary.map((item) => (
              <li>{item}</li>
            ))}
          </ul>
        ) : (
          <p class="mt-2 text-[var(--color-text-muted)] text-sm leading-relaxed">{entry.summary}</p>
        )}
        {entry.link2Url && entry.link2Label && (
          <p class="mt-1.5 text-sm">
            <a href={entry.link2Url} target="_blank" rel="noopener noreferrer" class="text-accent hover:underline">{entry.link2Label} →</a>
          </p>
        )}
      </div>
    </div>
  ))}
</div>
