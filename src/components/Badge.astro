---
interface Props {
  label: string;
  variant?: 'default' | 'accent' | 'muted';
  class?: string;
}
const { label, variant = 'default', class: className = '' } = Astro.props;
const variantClasses = {
  default: 'bg-[var(--color-surface-elevated)] text-[var(--color-text)] border border-[var(--color-border)]',
  accent: 'bg-accent/15 text-accent border border-accent/30',
  muted: 'bg-[var(--color-surface-elevated)] text-[var(--color-text-muted)] border border-[var(--color-border)]',
};
---

<span
  class:list={[
    'inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium transition-colors duration-200',
    variantClasses[variant],
    className,
  ]}
>
  {label}
</span>
