---
import PageLayout from '../layouts/PageLayout.astro';
import CopyEmail from '../components/CopyEmail.astro';
---

<PageLayout
  title="Contact — Dakota Klatt"
  description="Get in touch. Open to interesting conversations. Email and LinkedIn."
>
  <div class="mx-auto max-w-2xl px-6 py-section">
    <h1 id="main-content" class="font-display font-semibold text-display-xl text-[var(--color-text)] mb-4">
      Contact
    </h1>
    <p class="text-[var(--color-text-muted)] mb-8">
      Open to interesting conversations—technical leadership, platform work, or collaboration. No form; just reach out.
    </p>

    <div class="space-y-6">
      <div>
        <p class="text-sm font-medium text-[var(--color-text-muted)] mb-2">Email</p>
        <CopyEmail />
      </div>
      <div>
        <p class="text-sm font-medium text-[var(--color-text-muted)] mb-2">LinkedIn</p>
        <a
          href="https://linkedin.com/in/dakota-klatt27"
          target="_blank"
          rel="noopener noreferrer"
          class="text-accent font-medium hover:underline"
        >
          linkedin.com/in/dakota-klatt27
        </a>
      </div>
      <div>
        <p class="text-sm font-medium text-[var(--color-text-muted)] mb-2">Location</p>
        <p class="text-[var(--color-text)]">Green Bay, WI</p>
      </div>
    </div>

    <div class="mt-10 pt-8 border-t border-[var(--color-border)]">
      <p class="text-sm text-[var(--color-text-muted)] mb-4">
        Download my resume (PDF) below.
      </p>
      <a
        href="/resume.pdf"
        download="Dakota_Klatt_Resume.pdf"
        class="inline-flex items-center justify-center gap-2 rounded-lg font-medium transition-all duration-200 bg-[var(--color-surface-elevated)] text-[var(--color-text)] border border-[var(--color-border)] hover:border-accent/50 px-5 py-2.5"
      >
        Download resume (PDF)
      </a>
    </div>
  </div>
</PageLayout>
